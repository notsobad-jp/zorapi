{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/v0/books",
        "function": "books"
      },
      {
        "source": "/v0/books/*",
        "function": "book"
      },
      {
        "source": "/v0/persons",
        "function": "persons"
      },
      {
        "source": "/v0/persons/*",
        "function": "person"
      },
      {
        "source": "/v0/persons/*/books",
        "function": "personBooks"
      },
      {
        "source": "**",
        "destination": "https://github.com/#"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/__*"
    ]
  }
}
